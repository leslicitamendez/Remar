<h1>Lista de Producciones</h1>

  <div align="right">
    <%= form_tag({:controller => "produccions", :action => "index"}, :method => :get) do %>
      Buscar Producto: &nbsp;&nbsp;&nbsp; <%= text_field_tag "searchbox", params[:searchbox], :placeholder => "CÃ³digo de producto", :name => 'palabra' %> &nbsp;&nbsp;&nbsp;
      <%= submit_tag "Buscar", :name => nil, :class => 'btn btn-mini' %>
    <% end %>
  </div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Product</th>
      <th>Estado</th>
      <th>Fecha produccion</th>
      <th>Fecha vencimiento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produccions.each do |produccion| %>
      <tr>
        <td><%= produccion.product.code %></td>
        <td><%= produccion.estado %></td>
        <td><%= produccion.fecha_produccion %></td>
        <td><%= produccion.fecha_vencimiento %></td>
        <td><%= link_to 'Ver', produccion, :class => 'btn btn-mini btn-info active' %></td>
        <td><%= link_to 'Editar', edit_produccion_path(produccion), :class => 'btn btn-mini btn-warning active' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Registrar Produccion', new_produccion_path,:class => 'btn btn-mini btn-success active' %>
