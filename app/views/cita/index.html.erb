<h1>Lista de Cita</h1>

<table>
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Hora</th>
      <th>Ubicación</th>
      <th>Nombredonante</th>
      <th>Descripciondonacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cita.each do |citum| %>
      <tr>
        <td><%= citum.fecha %></td>
        <td><%= citum.hora %></td>
        <td><%= citum.ubicación %></td>
        <td><%= citum.nombreDonante %></td>
        <td><%= citum.descripcionDonacion %></td>
        <td><%= link_to 'Show', citum %></td>
        <td><%= link_to 'Edit', edit_citum_path(citum) %></td>
        <td><%= link_to 'Destroy', citum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar Cita', new_citum_path %>
