<h1>Lista de Conductas</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Interno_id</th>
      <th>Estado</th>
      <th>Fecha</th>
      <th>Descripcion</th>
      <th>Tipoconducta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conducta.each do |conductum| %>
      <tr>
        <td><%= conductum.interno_id %></td>
        <td><%= conductum.estado %></td>
        <td><%= conductum.fecha %></td>
        <td><%= conductum.descripcion %></td>
        <td><%= conductum.tipoConducta %></td>
        <td><%= link_to 'Ver Conducta', conductum, :class => 'btn btn-mini btn-info active' %></td>
        <td><%= link_to 'Editar Conducta', edit_conductum_path(conductum),  :class => 'btn btn-mini btn-warning active'   %></td>
        <td><% link_to 'Destroy', conductum, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-success active' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% link_to 'Registrar Conducta', new_conductum_path %>
<%= link_to 'Atras', :back, :class => 'btn btn-mini btn-default' %>
