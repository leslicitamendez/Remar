<%= form_for(@conductum) do |f| %>
  <% if @conductum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@conductum.errors.count, "error") %>, corrija los siguientes errores:</h2>

      <ul>
      <% @conductum.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <input type="hidden" name="interno_id" value="<%= @id %>" >

  <table align="center" width="80%">
  <tr>
        <td>
            <div class="field"  align="center">
              <%= f.label :tipoConducta, 'Tipo de Conducta *' %><br>
              <%= f.select :tipoConducta, ['','Agresion', 'Robo', 'Indisciplina'] %>
            </div>
        </td>
       <td>  
            <div class="field" align="center">
              <%= f.label :descripcion, 'Descripcion *' %><br>
              <%= f.text_area :descripcion %>
            </div>
        </td>
  </tr>
  <tr>
      <td>
        <div class="field"  align="center">
            <%= f.label :fecha, 'Fecha *' %><br>
            <%= f.date_select :fecha,  {order: [ :day, :month, :year], :start_year => Time.now.year, :end_year => Time.now.year-1 }  %>
          </div>
      </td>
  </tr>
  </table>
  <br>
  <div align="center">
    <label>* Los campos con asterisco, son obligatorios. </label>
  </div><br><br>
        
        <div class="actions" align="center">
          <%= f.submit (@conductum.new_record? ? 'Registrar Conducta' : 'Guardar Conducta') , :class => "btn btn-mini btn-success" %> |

          <% if @conductum.interno_id==nil %>
            <%= link_to 'Retornar a internos',  :back, :class => 'btn btn-mini btn-default' %>
          <% else %>
            <a class='btn btn-mini btn-default' href=<%="/internos/"%>+<%=@conductum.interno_id%> >Retornar a interno</a> 
          <% end %>
        </div>
      <% end %>
