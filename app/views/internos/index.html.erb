<h1>Lista de Internos</h1>


<table class="table table-striped">
  <thead>
    <tr >
      <th width="10%">Nombre</th>
      <th width="11%">Apellido Paterno</th>
      <th width="11%">Apellido Materno</th>
      <th width="10%">CI</th>
      <th width="10%">Fecha De Ingreso</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @internos.each do |interno| %>
      <tr >
        <td><%= interno.nombre %></td>
        <td><%= interno.apellido1 %></td>
        <td><%= interno.apellido2 %></td>
        <td><%= interno.ci %></td>
        <td><%= interno.fechaIngreso.strftime("%d, %B, %Y") %></td>
        <td width="10%" align="center"><%= link_to 'Ver Interno', interno, :class => 'btn btn-mini btn-info active'  %></td>
        <td width="9%" align="center"><%= link_to 'Editar Interno', edit_interno_path(interno), :class => 'btn btn-mini btn-warning active'  %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br><br>

<h4><%= link_to 'Registrar Interno', new_interno_path,:class => 'btn btn-mini btn-success active' %></h4>
<h4><%= link_to 'Atras', welcome_index_path, :class => 'btn btn-mini btn-default'  %></h4>
