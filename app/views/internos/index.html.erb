<h1>Lista de Internos</h1>

<table>
  <thead>
    <tr style="border-bottom:2pt solid black;">
      <th width="10%">Nombre</th>
      <th width="11%">Apellido Paterno</th>
      <th width="11%">Apellido Materno</th>
      <th width="10%">CI</th>
      <th width="10%">Profesion</th>
      <th width="10%">Oficio</th>
      <th width="10%">Fecha De Ingreso</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @internos.each do |interno| %>
      <tr style="border-bottom:1pt solid green;">
        <td><%= interno.nombre %></td>
        <td><%= interno.apellido1 %></td>
        <td><%= interno.apellido2 %></td>
        <td><%= interno.ci %></td>
        <td><%= interno.profesion %></td>
        <td><%= interno.oficio %></td>
        <td><%= interno.fechaIngreso %></td>
        <td width="10%" align="center"><%= link_to 'Show', interno %></td>
        <td width="9%" align="center"><%= link_to 'Edit', edit_interno_path(interno) %></td>
        <td width="9%" align="center"><%= link_to 'Destroy', interno, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br><br><br><br>

<h4><%= link_to 'Registrar Interno', new_interno_path %></h4>
<h4><%= link_to 'Atras', welcome_index_path %></h4>
