<h1>Lista internos</h1>

<table >
  <thead>
    <tr style="border-bottom:1pt solid black;">
     
      <th style='padding:5px 10px 5px 5px'>Estado</th>
      <th style='padding:5px 10px 5px 5px'>Fechaingreso</th>
      <th style='padding:5px 10px 5px 5px'>Nombre</th>
      <th style='padding:5px 10px 5px 5px'>Apellido1</th>
      <th style='padding:5px 10px 5px 5px'>Apellido2</th>
      <th style='padding:5px 10px 5px 5px'>Ci</th>
      <th style='padding:5px 10px 5px 5px'>Estadocivil</th>
      <th style='padding:5px 10px 5px 5px'>Lugarnacimiento</th>
      <th style='padding:5px 10px 5px 5px'>Fechanacimiento</th>
      <th style='padding:5px 10px 5px 5px'>Telefono</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @internos.each do |interno| %>
      <tr style="border-bottom:1pt solid black;">
        
        <td style='padding:5px 10px 5px 5px'><%= interno.estado %></td>
        <td style='padding:5px 10px 5px 5px'><%= interno.fechaIngreso %></td>
        <td style='padding:5px 10px 5px 5px'><%= interno.nombre %></td>
        <td style='padding:5px 10px 5px 5px'><%= interno.apellido1 %></td>
        <td style='padding:5px 10px 5px 5px'><%= interno.apellido2 %></td>
        <td style='padding:5px 10px 5px 5px'><%= interno.ci %></td>
        <td style='padding:5px 10px 5px 5px'><%= interno.estadoCivil %></td>
        <td style='padding:5px 10px 5px 5px'><%= interno.lugarNacimiento %></td>
        <td style='padding:5px 10px 5px 5px'><%= interno.fechaNacimiento %></td>
        <td style='padding:5px 10px 5px 5px'><%= interno.telefono %></td>
        <td style='padding:5px 10px 5px 5px'><%= link_to 'Ver', interno %></td>
        <td style='padding:5px 10px 5px 5px'><%= link_to 'Editar', edit_interno_path(interno) %></td>
  <!--      <td><%= link_to 'Destroy', interno, method: :delete, data: { confirm: 'Are you sure?' } %></td>        
  -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>
