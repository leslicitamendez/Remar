    <%= f.label :hora %><br>
    <%= f.time_select :hora %>
  </div>
  <div class="field">
    <%= f.label :cantidad, 'cantidad(*)' %><br>
    <%= f.number_field :cantidad %>
  </div>
  <div class="field">
    <%= f.label :observaciones %><br>
    <%= f.text_area :observaciones %>
  </div>
  
  <div class="field">
    <%= f.label :Product_id %><br>
    <%= f.collection_select(:Product_id, Product.all, :id, :code) %>
  </div>
  <div class="field">
    <%= f.label :Voluntario_id %><br>Voluntario_id
    <%= f.collection_select(:Voluntario_id, Voluntario.all, :id, :full_name) %>    
