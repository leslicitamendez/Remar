    <div id="error_explanation">
      <h2><%= pluralize(@rendicion_producto.errors.count, "error") %> prohibited this rendicion_producto from being saved:</h2>

      <ul>
      <% @rendicion_producto.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <input type="hidden" name="entrega_productos_id" value="<%= @id %>" >
