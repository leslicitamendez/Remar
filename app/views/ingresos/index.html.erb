<h1>Lista Ingresos</h1>

<div align="right">
    <%= form_tag({:controller => "ingresos", :action => "index"}, :method => :get) do %>
      Fecha Inicio: <%= text_field_tag "search", params[:search], :name => 'palabra', :placeholder => "dia/mes/año", :class => 'datepicker' %>
      Fecha Fin: <%= text_field_tag "search", params[:search], :name => 'palabra2', :placeholder => "dia/mes/año", :class => 'datepicker' %>
      <%= submit_tag "Buscar Ingresos Entre Fechas", :name => nil, :class => 'btn btn-mini' %>
    <% end %>
</div><br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Fecha</th>
      <th>Concepto</th>
      <th>Montobs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingresos.each do |ingreso| %>
      <tr>
        <td><%= ingreso.id %></td>
        <td><%= ingreso.fecha %></td>
        <td><%= ingreso.concepto %></td>
        <td><%= ingreso.montoBs %></td>
        <td><%= link_to 'Editar', edit_ingreso_path(ingreso), :class => 'btn btn-mini btn-warning active' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<script>
  $('.datepicker').datepicker({
    weekStart:1,
  }).on('changeDate', function(e){
    $(this).datepicker('hide');
  });
</script>
<br>

<%= link_to 'Registrar Ingreso', new_ingreso_path,:class => 'btn btn-mini btn-success active' %>
