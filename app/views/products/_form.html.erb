<%= form_validated_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :code, 'Codigo' %><br>
    <%= f.text_field :code %>
  </div>
  <div class="field">
    <%= f.label :name, 'Nombre' %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description, 'Descripcion' %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :state, 'Estado' %><br>
    <%= f.select :state, ['Activo', 'Inactivo'] %>
  </div>
  <br><br>
  <div class="actions">
    <%= f.submit (@product.new_record? ? 'Registrar Producto' : 'Editar Producto') , :class => "btn btn-mini btn-success" %>
  </div>
