<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %>, corrija los siguientes errores:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <table>
    <tr>
      <td>
        <div class="field">
          <%= f.label :name, 'Nombre *' %><br>
          <%= f.text_field :name %>
        </div>
      </td>
      <td width="100px"></td>
      <td>
        <div class="field">
          <%= f.label :unity, 'Unidad *'%><br>
          <%= f.text_field :unity %>
        </div>
      </td>
    </tr>

    <tr>
      <td>
        <div class="field">
          <%= f.label :price, 'Precio en Bs. *' %><br>
          <%= f.text_field :price %>
        </div>
      </td>
      <td width="100px"></td>
      <td>
        <div class="field">
          <%= f.label :description, 'DescripciÃ³n *' %><br>
          <%= f.text_area :description %>
        </div>
      </td>
    </tr>
  </table><br>
  <div>
    <label>* Los campos con asterisco, son obligatorios. </label>
  </div><br><br>
  <div class="actions" align="center">
    <%= f.submit (@product.new_record? ? 'Registrar Producto' : 'Editar Producto') , :class => "btn btn-sm btn-success" %> |
    <%= link_to 'Productos', products_path, :class => 'btn btn-sm btn-default' %>
  </div><br>
  
  <script type="text/javascript">
    $(function() {
      var unidades = [
        "Gramos",
        "Mililitros",
        "Pieza",
        "Bolsa",
        "Litros",
        "Miligramos",
        "Docena",
        "Kilos"
      ];

      $("#product_unity").autocomplete({
        source: unidades,
          messages: {
          noResults: '',
          results: function() {}
        }
      });
    });
  </script>
<% end %>