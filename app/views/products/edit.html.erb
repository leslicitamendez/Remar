<center>
	<h2>Editar Producto</h2>

	<%= form_for(@product) do |f| %>
	  <div class="field">
		    <%= f.label :state, 'Estado *' %><br>
		    <%= f.select :state, ['Activo', 'Inactivo'] %>
	  </div>
	  <%= render 'form' %>
	<% end %>

	<br><br>
	<%= link_to 'Atras', products_path, :class => 'btn btn-mini btn-default' %>
</center>