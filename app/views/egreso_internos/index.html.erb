<h1>Lista de Egreso Interno</h1>

  <div align="right">
    <%= form_tag({:controller => "egreso_internos", :action => "index"}, :method => :get) do %>
      Buscar Interno: &nbsp;&nbsp;&nbsp; <%= text_field_tag "searchbox", params[:searchbox], :placeholder => "Nombre de Interno", :name => 'palabra' %> &nbsp;&nbsp;&nbsp;
      <%= submit_tag "Buscar", :name => nil, :class => 'btn btn-mini' %>
    <% end %>
  </div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Interno</th>
      <th>Concepto</th>
      <th>Monto Bs.</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @egreso_internos.each do |egreso_interno| %>
      <tr>
        <td><%= Interno.find(egreso_interno.interno_id.to_i).nombre %></td>
        <td><%= egreso_interno.concepto %></td>
        <td><%= egreso_interno.monto %></td>
        <td><%= link_to 'Ver Egreso Interno', egreso_interno, :class => 'btn btn-mini btn-info active' %></td>
        <td><%= link_to 'Editar Egreso Interno', edit_egreso_interno_path(egreso_interno), :class => 'btn btn-mini btn-warning active' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br><br>

<%= link_to 'Registrar Egreso Interno', new_egreso_interno_path, :class => 'btn btn-mini btn-success active' %>
