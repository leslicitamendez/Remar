<h1>Lista de Historias Clinicas</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Interno</th>
      <th>Enfermedades</th>
      <th>Causa internacion</th>
      <th>Observaciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @historia_clinicas.each do |historia_clinica| %>
      <tr>
        <td><%= historia_clinica.interno_id %></td>
        <td><%= historia_clinica.enfermedades %></td>
        <td><%= historia_clinica.causa_internacion %></td>
        <td><%= historia_clinica.observaciones %></td>
        <td><%= link_to 'Ver', historia_clinica, :class => 'btn btn-mini btn-info active' %></td>
        <td><%= link_to 'Editar', edit_historia_clinica_path(historia_clinica), :class => 'btn btn-mini btn-warning active' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Registrar Historia clinica', new_historia_clinica_path, :class => 'btn btn-mini btn-success active' %>
