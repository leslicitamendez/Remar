<%= form_for(@historia_clinica) do |f| %>
  <% if @historia_clinica.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@historia_clinica.errors.count, "error") %>, corrija los siguientes errores:</h2>

      <ul>
      <% @historia_clinica.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <input type="hidden" name="interno_id" value="<%= @id %>" >
  <br>
  <div class="field">
    <%= f.label :enfermedades, 'Enfermedad *' %><br>
    <%= f.text_area :enfermedades %>
  </div>
  <div class="field">
    <%= f.label :causa_internacion, 'Causa Internacion *' %><br>
    <%= f.text_area :causa_internacion %>
  </div>
  <div class="field">
    <%= f.label :observaciones %><br>
    <%= f.text_area :observaciones %>
  </div>
  <div class="field">
    <%= f.label :fecha, 'Fecha *' %><br>
    <%= f.date_select :fecha %>
  </div><br><br>
  <div>
    <label>* Los campos con asterisco, son obligatorios. </label>
  </div>
  <br><br>
  <div class="actions">
    <%= f.submit (@historia_clinica.new_record? ? 'Registrar Historia Clinica' : 'Editar Historia Clinica') , :class => "btn btn-mini btn-success" %>
  </div>
<% end %>
